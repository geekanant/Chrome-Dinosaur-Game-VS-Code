{
  "name": "chrome-dinosaur-game",
  "displayName": "Chrome Dinosaur Game",
  "description": "Now play the Chrome Dino Game without leaving VS Code!",
  "publisher": "geekanant",
  "icon":"icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geekanant/Chrome-Dinosaur-Game-VS-Code"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dino-game",
          "title": "Chrome Dinosaur Game",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "dino-game": [
        {
          "id": "chrome-dinosaur-game.startDino",
          "name": "Chrome Dinosaur Game"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "chrome-dinosaur-game.startDino",
        "contents": "[Start](command:chrome-dinosaur-game.startDino)"
      }
    ],
    "commands": [
      {
        "command": "chrome-dinosaur-game.startDino",
        "title": "Hello World",
        "category": "Games"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.0.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
